<section class="section-contact" id="sectionContact">
  <div class="box" data-aos="zoom-in">
    <form class="message" action="/message" method="post" id="form-message">
      <label class="title"><%= contact.title %></label>
      <div class="field" data-aos="fade-up">
        <label for="name"><%= contact.name %></label>
        <input type="text" name="name" id="name" />
      </div>
      <div class="field" data-aos="fade-up">
        <label for="email"><%= contact.email %></label>
        <input type="email" name="email" id="email" />
      </div>
      <div class="field" data-aos="fade-up">
        <label for="subject"><%= contact.subject %></label>
        <input type="text" name="subject" id="subject" />
      </div>
      <div class="field" data-aos="fade-up">
        <label for="message"><%= contact.message %></label>
        <textarea name="message" id="message" cols="30" rows="10"></textarea>
      </div>
      <button type="submit"><%= contact.send %></button>
    </form>
    <div class="contact">
      
        <div class="field" data-aos="flip-left">
          <img src="/images/telemarketing.jpg" id="calendar" alt="" />
          <p style="font-size: 12px">305-615-5722</p>
          
        </div>
      <div class="field" data-aos="flip-left">
        <img src="/images/contact/mail.png" id="calendar" alt=""  />
        
        <p style="font-size: 12px"> Bayharborsmile@gmail.com</p>
      </div>
       <div class="field" data-aos="flip-left">
        <img src="/images/faxRojo.png" alt="" id="whatsapp" class="contact-web" />
        <img src="/images/fax.png" alt="" id="whatsapp" class="contact-mobile" />
        <div>
          <p style="font-size: 12px">954-900-1635</p>
          
        </div>
      </div> 
     
    </div>
  </div>
</section>

